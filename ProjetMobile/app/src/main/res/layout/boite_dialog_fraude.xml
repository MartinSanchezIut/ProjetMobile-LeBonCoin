<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:gravity="center|top"
              android:orientation="vertical">
    <TextView
            android:text="Motif de la fraude"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="44dp" android:id="@+id/Description"
            android:layout_marginEnd="16dp"/>
    <EditText
            android:gravity="center"
            android:hint="Donner le motif de la fraude"
            android:textSize="20dp"
            android:layout_width="351dp"
            android:layout_height="86dp" android:id="@+id/descriptionfraude"
    />

    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:gravity="center">
        <Button
                android:text="Annuler"
                android:onClick="fconfirmer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/Annuler"/>
        <Button
                android:text="Valider"
                android:onClick="fannuler"
                android:layout_marginLeft="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/Confirmer"/>



    </LinearLayout>
</LinearLayout>
</FrameLayout>